<Configuration iteration="1">
    <Component shape="Layer" name="DataLayer">
        <Rules>
            <Dependency rule="javax\.persistence.*" weight="50"/>
            <Dependency rule="org\.hibernate.*" weight="50"/>
            <Dependency rule="org\.springframework\.data.*" weight="50"/>
            <Name rule=".*Repository" weight="100"/>
        </Rules>
        <Dependencies>
            <DependsOn shape="Layer" name="DomainLayer" allowed="true"/>
            <DependsOn shape="Layer" name="DataLayer" allowed="true"/>
        </Dependencies>
    </Component>
    <Component shape="Layer" name="DomainLayer">
        <Rules>
            <Dependency rule="javax\.mail.*" weight="80"/>
            <Dependency rule="org\.apache\.velocity.*" weight="100"/>
            <Dependency rule="org\.springframework\.mail.*" weight="100"/>
            <Dependency rule="org\.springframework\.stereotype\.Service.*" weight="80" type="annotation"/>
            <Implements rule="org\.springframework\.stereotype\.Service.*" weight="80" />
            <AnnotatedBy rule="org\.springframework\.stereotype\.Service.*" weight="80" />
            <Name rule=".*MailSender" weight="100"/>
            <Name rule=".*Service" weight="100"/>
            <Name rule=".*ServiceImpl" weight="100"/>
        </Rules>
        <Dependencies>
            <DependsOn shape="Layer" name="DomainLayer" allowed="false"/>
            <DependsOn shape="Layer" name="DataLayer" allowed="true"/>
        </Dependencies>
    </Component>
    <Component shape="Layer" name="PresentationLayer">
        <Rules>
            <Dependency rule="com\.github\.dandelion.*" weight="50"/>
            <Dependency rule="javax\.servlet.*" weight="80"/>
            <Dependency rule="org\.springframework\.stereotype\.Controller.*" weight="100"/>
            <Name rule=".*Controller" weight="100"/>
            <Name rule=".*Form" weight="100"/>
        </Rules>
        <Dependencies>
            <DependsOn shape="Layer" name="PresentationLayer" allowed="false"/>
            <DependsOn shape="Layer" name="DomainLayer" allowed="false"/>
        </Dependencies>
    </Component>
    <Component shape="Module" name="Index">
        <Rules>
            <Package rule="de\.htw\.kraftraum\.trainingszeitverwaltung\.index.*" weight="100"/>
        </Rules>
    </Component>
    <Component shape="Module" name="KeycardAdministration">
        <Rules>
            <Package rule="de\.htw\.kraftraum\.trainingszeitverwaltung\.keycard.*" weight="100"/>
        </Rules>
    </Component>
    <Component shape="Module" name="NewsAdministration">
        <Rules>
            <Package rule="de\.htw\.kraftraum\.trainingszeitverwaltung\.news.*" weight="100"/>
        </Rules>
    </Component>
    <Component shape="Module" name="TrainingAdministration">
        <Rules>
            <Package rule="de\.htw\.kraftraum\.trainingszeitverwaltung\.training.*" weight="100"/>
        </Rules>
    </Component>
    <Component shape="Module" name="UserAdministration">
        <Rules>
            <Package rule="de\.htw\.kraftraum\.trainingszeitverwaltung\.user.*" weight="100"/>
        </Rules>
    </Component>
    <Component shape="Module" name="Infrastructure">
        <Component shape="Component" name="IConfiguration">
            <Rules>
                <Package rule="de\.htw\.kraftraum\.trainingszeitverwaltung\.infrastructure\.configuration.*"
                         weight="100"/>
            </Rules>
        </Component>
        <Component shape="Component" name="ISecurity">
            <Rules>
                <Package rule="de\.htw\.kraftraum\.trainingszeitverwaltung\.infrastructure\.security.*" weight="100"/>
            </Rules>
        </Component>
        <Component shape="Component" name="IUtil">
            <Rules>
                <Package rule="de\.htw\.kraftraum\.trainingszeitverwaltung\.infrastructure\.util.*" weight="100"/>
            </Rules>
        </Component>
        <Component shape="Component" name="IValidation">
            <Rules>
                <Package rule="de\.htw\.kraftraum\.trainingszeitverwaltung\.infrastructure\.validation.*" weight="100"/>
            </Rules>
        </Component>
        <Component shape="Component" name="IView">
            <Rules>
                <Package rule="de\.htw\.kraftraum\.trainingszeitverwaltung\.infrastructure\.view.*" weight="100"/>
            </Rules>
        </Component>
    </Component>
</Configuration>